{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    <section class="register">
        <h1>S'enregistrer</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'register__form'}}) }}
            {{ form_row(registrationForm.lastname) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.password, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.question) }}
            {{ form_row(registrationForm.answer) }}
            <div class="register__form__checkbox">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="">S'enregistrer</button>
        {{ form_end(registrationForm) }}

        <div class="register__links">
            <p><a href="{{ path('login') }}">J'ai déjà un compte</a></p>
        </div>
    </section>
{% endblock %}
